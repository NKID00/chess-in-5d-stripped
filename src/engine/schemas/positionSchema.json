{
  "$id": "positionSchema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Position",
  "description": "Describes a spot in turn, timeline, rank, and file",
  "type": "object",
  "properties": {
    "turn": {
      "type": "object",
      "properties": {
        "turnNumber": {
          "type": "integer",
          "description": "Turn number of the position",
          "minimum": 1
        },
        "player": {
          "$ref": "playerSchema.json",
          "description": "Reference to the player in which the player's turn is the same as the position's turn (white, black, etc.)"
        }
      }
    },
    "timeline": {
      "type": "integer",
      "description": "Timeline number of the position"
      "minimum": 0
    },
    "rank": {
      "type": "integer",
      "description": "Rank of the position",
      "minimum": 0
    },
    "file": {
      "type": "integer",
      "description": "File of the position",
      "minimum": 0
    }
  }
}
